<!DOCTYPE html>
<html>
  <head>
    <title>CrConsig</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "fontawesome", "data-turbo-track": "reload" %>
  </head>

  <body>
    <div id="wrapper">
      <!-- Sidebar-->
      <% if user_signed_in? %>
        <%= render  "layouts/shared/sidebar" %>
      <% end %>
      <div id="content-wrapper" class="d-flex flex-column"">
        <div id="content">
          
          <div class="container">
            <p class="notice" style="color: green"><%= notice %></p>
            <p class="alert" style="color: red"><%= alert if !notice.present? %></p>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>

</html>
